{
  "packages": [
    "packages/*"
  ],
  "version": "4.0.4",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "README.md"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "main",
        "feature/newrelic-io"
      ],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "conventionalCommits": true,
      "yes": true
    }
  }
}
